{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"module": "CommonJS",
		"target": "es5",
		"noImplicitAny": true,
		"outDir": "build"
	},
	"filesGlob": [
		"src/*.ts"
	],
	"files": [
		"src/formatters.ts",
		"src/logger.ts",
		"src/story.ts",
		"src/storytelling.ts",
		"src/utils.ts"
	],
	"atom": {
		"rewriteTsconfig": true
	}
}
